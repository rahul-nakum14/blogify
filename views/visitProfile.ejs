<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Profile</title>
    <style>
      body {
        font-family: "Arial", sans-serif;
        background-color: #fafafa;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
      }

      h1 {
        color: #333;
        margin-bottom: 20px;
      }

      .profile-container {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        text-align: center;
        width: 600px; /* Adjust the width as needed */
        overflow: hidden; /* Hide overflowing content */
      }

      .profile-image {
        width: 100px;
        height: 100px; /* Adjust the height as needed */
      }

      .profile-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 50%;
      }

      p {
        color: #555;
        margin: 10px 0;
      }

      .followers,
      .following {
        font-weight: bold;
        color: #333;
        margin-top: 15px;
      }

      .social-stats {
        display: flex;
        justify-content: space-around;
        margin-top: 20px;
        padding: 10px;
        background-color: #f0f0f0;
      }

      .social-stats div {
        flex: 1;
      }

      /* Style for blogs */
      .blogs {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
        padding: 20px;
      }

      .blog-item {
        border: 1px solid #ddd;
        border-radius: 10px;
        overflow: hidden;
      }

      .blog-title {
        font-size: 18px;
        font-weight: bold;
        margin: 0;
        padding: 10px;
        background-color: #333;
        color: #fff;
      }

      .blog-cover-image {
        width: 100%;
        max-height: 200px; /* Adjust the maximum height as needed */
        object-fit: cover;
      }

      .blog-body {
        color: #333;
        padding: 10px;
      }
    </style>
  </head>
  <body>
    <div class="profile-container">
      <div class="profile-image">
        <img
          src="/images/userDefaultAvatar.jpeg"
          alt="Profile Image"
          height="100px"
          width="100px"
        />
      </div>
      <h1><%= user.fullname %></h1>
      <p>Email: <%= user.email %></p>
      <div class="social-stats">
        <div>
          <p class="followers">Followers</p>
          <p><%= user.followers %></p>
        </div>
        <div>
          <p class="following">Following</p>
          <p><%= user.following %></p>
        </div>
      </div>

      <!-- Display user's blogs -->
      <div class="blogs">
        <% if (publicBlogs.length > 0) { %> <% publicBlogs.forEach(blog => { %>
        <div class="blog-item">
          <h3 class="blog-title"><%= blog.title %></h3>
          <div class="blog-cover-image">
            <img src="<%= blog.coverImageUrl %>" alt="Blog Cover Image" />
          </div>
          <p class="blog-body"><%= blog.body %></p>
        </div>
        <% }) %> <% } else { %>
        <p>No public blogs available.</p>
        <% } %>
      </div>
    </div>
  </body>
</html>
