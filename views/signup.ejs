<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Signup Page</title>
</head>
<body>
    <%- include('./partials/navbar') %>
    <div class="container mt-4">
        <form action="/users/signup" method="post">
            <div class="mb-3">
                <label for="fullnameInput" class="form-label">Full Name</label>
                <input type="text" class="form-control" id="fullnameInput" name="fullnameInput"  required="true">
              </div>
            <div class="mb-3">
              <label for="emailInput" class="form-label">Email address</label>
              <input type="email" class="form-control" id="emailInput" aria-describedby="emailHelp" name="emailInput"  required="true">
              <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>
            <div class="mb-3">
              <label for="passwordInput" class="form-label">Password</label>
              <input type="password" class="form-control" id="passwordInput" name="passwordInput" required="true">
            </div>
    
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
            
          </form>
    </div>
  
    <%- include('./partials/script') %>
</body>
</html>
